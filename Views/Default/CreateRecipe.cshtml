@{
    ViewData["Title"] = "Film Önerisi";
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Film Öner</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        
        body {
    background: url('/images/image.png') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Poppins', sans-serif;


    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* Tüm yüksekliği kaplasın */
    margin: 0;
             }
        .container {
    max-width: 600px;
    text-align: center;
    margin-top: 25px;
    padding: 10px;
    background: white;
    border-radius: 15px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

                   } 
        h2 {
            
            color: #5C5470;
            font-weight: 700;
        }

        .form-label {
            font-weight: 600;
            color: #5C5470;
        }

        .btn-primary {
            background: #A084CA;
            border: none;
            font-weight: 600;
            padding: 10px 15px;
            border-radius: 10px;
        }

            .btn-primary:hover {
                background: #8466A1;
            }

        .alert {
            margin-top: 15px;
        }

        .result-box {
            background: #E8DFF5;
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
            color: #5C5470; 
            font-size: 16px;
            font-weight: 500;
        }
    </style>
</head>

<body>
    <div class="container">

        <h2><i class="fas fa-clapperboard me-2"></i>Film Öneri Sistemi</h2>
        <p class="text-center">İzlemek istediğiniz filmin temasını birkaç kelime ile anlatın! </p>

        <form method="post">
            <label for="ingredients" class="form-label">Kelimeleri giriniz (virgülle ayırın):</label>
            <input type="text" id="ingredients" name="ingredients" class="form-control" placeholder="Örn: Doğa, Dostluk, Mücadele" required />
            <br />
            <button type="submit" class="btn btn-primary w-100">
    <i class="fas fa-film me-2"></i>Film Öner!</button>
        </form>

        <div class="result-box">
            <h4><i class="fas fa-film"></i> AI Önerisi:</h4>
            <p>@ViewBag.recipe</p>
        </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


</body>




</html>
